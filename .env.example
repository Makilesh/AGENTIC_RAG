# Agentic RAG System Environment Variables

# ============================================
# LLM Configuration
# ============================================

# Google Gemini API Key (Primary LLM)
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (Fallback LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# ============================================
# Milvus Configuration
# ============================================

MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=agentic_rag_documents

# ============================================
# Embedding Model Configuration
# ============================================

EMBEDDING_MODEL=all-MiniLM-L6-v2
# Alternative: all-mpnet-base-v2 (768 dimensions)
EMBEDDING_DIMENSION=384

# ============================================
# Application Configuration
# ============================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum file size in MB
MAX_FILE_SIZE_MB=200

# Chunk Configuration
DEFAULT_CHUNK_SIZE=600
CHUNK_OVERLAP=100
MIN_CHUNK_SIZE=200

# Search Configuration
DEFAULT_TOP_K=10
MIN_SIMILARITY_SCORE=0.5

# Quality Thresholds
QUALITY_THRESHOLD=0.7
MAX_REWRITE_ITERATIONS=2
CONFIDENCE_THRESHOLD=0.8

# ============================================
# Streamlit Configuration
# ============================================

STREAMLIT_SERVER_PORT=8501
STREAMLIT_THEME=light
